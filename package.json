{
  "name": "react-a11y-test",
  "version": "1.0.0",
  "description": "A React-based Single Page Application (SPA) built with GOV.UK and MoJ Design Systems to demonstrate accessibility and performance best practices.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "a11y": "axe-core playwright test --grep @a11y",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "server:example": "node server-example.js",
    "monitor:dev": "npm run dev & npm run server:example",
    "performance:test": "npm run build && npm run preview & sleep 5 && npm run lighthouse:ci",
    "docker:build": "docker build -t react-a11y-test .",
    "docker:up": "docker-compose up",
    "docker:run": "docker run -p 3000:3000 react-a11y-test",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@hookform/resolvers": "5.2.2",
    "@ministryofjustice/frontend": "7.1.0",
    "clsx": "2.1.1",
    "cors": "2.8.5",
    "express": "5.1.0",
    "govuk-frontend": "5.13.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "7.66.1",
    "react-router-dom": "7.9.6",
    "react-window": "2.2.3",
    "react-window-infinite-loader": "2.0.0",
    "web-vitals": "5.1.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.2",
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.8.2",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.4",
    "globals": "^16.5.0",
    "jsdom": "^27.0.0",
    "lighthouse": "^13.0.1",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "7.2.4",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^4.0.14",
    "wait-on": "^9.0.0"
  },
  "overrides": {
    "tmp": "^0.2.4"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "react",
    "accessibility",
    "performance",
    "govuk",
    "moj",
    "design-system",
    "typescript",
    "vite"
  ],
  "author": "Matt Hobbs",
  "license": "MIT"
}
